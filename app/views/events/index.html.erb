<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>終日</th>
            <th>スケジュール更新日</th>
            <th>確認</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
    </thead>
    <tbody>
        <% @events.each do |event| %>
            <tr>
                <td><%= event.id %></td>
                <td><%= event.title %></td>
                <td><%= event.start_date.strftime("%Y年 %m月%d日") %></td>
                <td><%= event.end_date.strftime("%Y年 %m月%d日") %></td>
                <td>
                    <% if event.all_day == true %>
                    ◯
                    <% else %>
                    <% end %>
                </td>
                <td><%= event.updated_at.to_s(:datetime_jp) %></td>
                <td><%= link_to("確認",event) %></td>
                <td><%= link_to("編集",[:edit,event]) %></td>
                <td><%= link_to("削除",event,method: :delete,data:{confirm:"本当に削除しますか?"}) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to("イベント新規登録", :new_event) %></p>